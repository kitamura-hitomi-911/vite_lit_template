{
  "compilerOptions": {
    "target": "ESNext" /* ESNext or ES2022 を推奨  */,
    "experimentalDecorators": true,
    "useDefineForClassFields": false /* Vite は ESNext or ES2022 が target なら true とあるが、lit のデコレーターを使う場合は false を指定 */,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler" /* bundler と同じ方法で import を解決 */,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
